{% extends "proj/base.html.twig" %}

{% block body %}

        <form class="styled_form " action="{{ path('blackjack_init') }}" method="get" style="color: black; max-width: 500px;">
            <label for="startingMoney">Starting Money:</label>
            <input type="number" id="startingMoney" name="startingMoney" value="100" min="1">
            
            <label for="players">Number of Players:</label>
            <input type="number" id="players" name="players" value="1" min="1" max="3">
            
            <button class="full-width-button blue-button" type="submit">Play Blackjack</button>
        </form>
        
{% endblock %}
