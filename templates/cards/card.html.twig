{% extends "base.html.twig" %}

{% block title %}Cards{% endblock %}

{% block body %}
    <h1>Card Hand</h1>

    {{ include('flash.html.twig') }}

    <form method="get" action="">
        <p>
            <input type="submit" value="View Deck"
                onClick="this.form.action='{{ path('deck') }}';">
            <input type="submit" value="Shuffle"
                onClick="this.form.action='{{ path('shuffle') }}';">
            <input type="submit" value="Draw a Card"
                onClick="this.form.action='{{ path('draw') }}';">
            <input type="submit" value="Reset"
                onClick="this.form.action='{{ path('card_init') }}';">
            <a href="{{ path('card_docs') }}">Docs</a>
        </p>
    </form>
    <form method="post" action="{{ path('draw_form') }}">
        <label for="num">Draw X cards:</label>
        <input type="number" id="num" name="num" min="1" required>
        <button type="submit">Draw</button>
    </form>
    <br>
    {% for card in cards %}
        <span class="card">{{ card.getAsCard() }}</span>
    {% endfor %}

{% endblock %}
